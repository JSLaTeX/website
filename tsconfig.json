{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"lib": ["esnext", "dom", "es2021"],
		"noUnusedLocals": true,
		"paths": {
			"~/*": ["./src/*"],
			"~root/*": ["./*"]
		},
		"types": [
			"vite/client",
			"vue/ref-macros",
			"./typings/env",
			"./typings/monaco-color",
			"./typings/monaco-languages",
			"./typings/monaco-tokenization"
		]
	}
}
